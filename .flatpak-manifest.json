{
    "id": "org.kde.vakzination",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "vakzination",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "modules": [
        {
            "name": "poppler",
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DENABLE_UNSTABLE_API_ABI_HEADERS=ON",
                "-DENABLE_BOOST=OFF",
                "-DENABLE_CPP=OFF",
                "-DENABLE_GLIB=OFF",
                "-DENABLE_GOBJECT_INTROSPECTION=OFF",
                "-DENABLE_LIBCURL=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_QT5=OFF",
                "-DENABLE_QT6=OFF",
                "-DENABLE_SPLASH=OFF",
                "-DWITH_Cairo=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "git://anongit.freedesktop.org/poppler/poppler.git",
                    "branch": "master"
                }
            ],
            "modules": [
                {
                    "name": "openjpeg",
                    "buildsystem": "cmake-ninja",
                    "builddir": true,
                    "config-opts": [
                        "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                        "-DBUILD_STATIC_LIBS=OFF",
                        "-DBUILD_CODEC=OFF"
                    ],
                    "cleanup": [
                        "/bin",
                        "/include",
                        "/lib/*.a",
                        "/lib/openjpeg-*",
                        "/lib/pkgconfig"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/uclouvain/openjpeg/archive/v2.5.0.tar.gz",
                            "sha256": "0333806d6adecc6f7a91243b2b839ff4d2053823634d4f6ed7a59bc87409122a",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 2550,
                                "stable-only": true,
                                "url-template": "https://github.com/uclouvain/openjpeg/archive/v$version.tar.gz"
                            }
                        }
                    ]
                }
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "kpkpass",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kpkpass",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs",
                "/etc/xdg/*categories",
                "/share/qlogging-categories5"
            ]
        },
        {
            "name": "kmime",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kmime",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs",
                "/etc/xdg/*categories",
                "/share/qlogging-categories5"
            ]
        },
        {
            "name": "zxing",
            "config-opts": [
                "-DBUILD_DEPENDENCIES=LOCAL",
                "-DBUILD_SHARED_LIBS=ON",
                "-DBUILD_UNIT_TESTS=OFF",
                "-DBUILD_BLACKBOX_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/include",
                "*.pc",
                "/lib/*/cmake",
                "libZXing.so"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/zxing-cpp/zxing-cpp/archive/v2.1.0.tar.gz",
                    "sha256": "6d54e403592ec7a143791c6526c1baafddf4c0897bb49b1af72b70a0f0c4a3fe"
                }
            ]
        },
        {
            "name": "kitinerary",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_TOOLS=OFF"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/pim/kitinerary",
                    "branch": "master"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/lib/libexec",
                "/mkspecs",
                "/etc/xdg/*categories",
                "/share/qlogging-categories5"
            ]
        },
        {
            "name": "khealthcertificate",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DBUILD_WITH_QT6=ON"
            ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [ { "type": "git", "url": "https://invent.kde.org/pim/khealthcertificate.git", "branch": "master"} ],
            "cleanup": [
                "/include",
                "/lib/cmake",
                "/mkspecs",
                "/etc/xdg/*categories",
                "/share/qlogging-categories5"
            ]
        },
        {
            "name": "vakzination",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
